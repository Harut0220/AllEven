<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .container{
        max-width: 900px;
        padding: 50px;
        
    }

    .event_desc, .event_addres,.download_div{
      width: 100%;
      background-color: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.043);
      border-radius: 10px;
      padding: 10px;
    }
    .event_data{
      width: 100%;
      background-color: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.043);
      border-radius: 10px;
      padding: 10px;
    }

    .datas{
      width: 100%;
     margin-top: 50px;
     display: flex;
     flex-direction: column;
     gap: 30px;
    }
    

    .event_time_div,.event_phone_div,.event_web_div,.event_ticket_div,.event_date{
      display: flex;
      align-items: center;
      gap: 10px;
      margin-top: 8px;
      overflow-wrap: anywhere;

    }
    .download_div{
      display: flex;
      flex-direction: column;
      gap: 40px;
    }
    .header_text{
      font-size: 18px;
      color: #00ADA6;
      font-weight: bold;
      margin: 0 auto;
    }
    .play_market,.app_store{
      width: 200px;
    }
    .download_icon_div{
      display: flex;
      justify-content: center;
      gap: 40px;
      flex-wrap: wrap;
    }
</style>
<div class="container" style="background-color: #F6F5F7;">
  <div
    id="carouselExampleIndicators"
    class="carousel slide"
    data-bs-ride="carousel"
  >
    <div class="carousel-indicators">
          {{#each event.images}}

            <button
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide-to="{{@index}}"
            class="{{#if @first}}active{{/if}}"
            aria-current="{{#if @first}}true{{/if}}"
            aria-label="Slide {{@index}}"
          ></button>
          {{/each}}
      {{!-- <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="1"
        aria-label="Slide 2"
      ></button>
      <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="2"
        aria-label="Slide 3"
      ></button> --}}
    </div>
    <div class="carousel-inner">
      {{#each event.images}}
        <div class="carousel-item {{#if @first}}active{{/if}}" data-index="{{@index}}">
            {{!-- class="carousel-item {{#if @first}}active{{/if}}" data-index="{{@index}}" --}}
          <img src="/{{name}}?width=1200&height=700" class="d-block w-100" alt="..." />
        </div>
      {{/each}}

    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="datas">
    <h3 >{{event.name}}</h3>
    <div class="event_desc"><span style="font-weight: bold;">Описание:</span>{{event.description}}</div>
    <div class="event_addres">
        <span style="font-weight: bold;">Адрес:</span> {{event.address}}
    </div>
    <div class="event_data" style="gap: 30px;">
      <div class="event_date">
        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="#00ADA6" class="bi bi-calendar-date" viewBox="0 0 16 16">
           <path d="M6.445 11.688V6.354h-.633A13 13 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23"/>
           <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5M1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4z"/>
        </svg>
        <span> {{date}}</span>
      </div>
      <div class="event_time_div">
        <img src="/public/images/staticimg/Component5.svg" alt="time">
        <span> {{time}}</span>
      </div>
      <div class="event_phone_div">
        <img style="width: 18px;"  src="/fonts/phoneVector.png" alt="phone">
        <span> +{{phone_number}}</span>
      </div>
      <div class="event_ticket_div">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00ADA6" class="bi bi-link-45deg" viewBox="0 0 16 16">
          <path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1 1 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4 4 0 0 1-.128-1.287z"/>
          <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243z"/>
        </svg>        
         <a href="https://{{event.tickets_link}}" target="_blank">{{event.tickets_link}}</a>
      </div>
      <div class="event_web_div">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="#00ADA6" class="bi bi-globe" viewBox="0 0 16 16">
          <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m7.5-6.923c-.67.204-1.335.82-1.887 1.855A8 8 0 0 0 5.145 4H7.5zM4.09 4a9.3 9.3 0 0 1 .64-1.539 7 7 0 0 1 .597-.933A7.03 7.03 0 0 0 2.255 4zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a7 7 0 0 0-.656 2.5zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5zM8.5 5v2.5h2.99a12.5 12.5 0 0 0-.337-2.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5zM5.145 12q.208.58.468 1.068c.552 1.035 1.218 1.65 1.887 1.855V12zm.182 2.472a7 7 0 0 1-.597-.933A9.3 9.3 0 0 1 4.09 12H2.255a7 7 0 0 0 3.072 2.472M3.82 11a13.7 13.7 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5zm6.853 3.472A7 7 0 0 0 13.745 12H11.91a9.3 9.3 0 0 1-.64 1.539 7 7 0 0 1-.597.933M8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855q.26-.487.468-1.068zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.7 13.7 0 0 1-.312 2.5m2.802-3.5a7 7 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7 7 0 0 0-3.072-2.472c.218.284.418.598.597.933M10.855 4a8 8 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4z"/>
        </svg>        
        <a href="https://{{event.website_link}}" target="_blank">{{event.website_link}}</a>
      </div>
    </div>
    <div class="download_div" style="padding: 60px;">
      <span class="header_text">
        Cкачайте сейчас и получите доступ ко всем событиям.
      </span>
      <div class="download_icon_div">
        {{!-- href="https://play.google.com/store/apps/details?id=com.alleven" --}}
        <a  href="javascript:void(0);" onclick="openAppOrStore('{{event._id}}')">
        {{!-- <img class="play_market" src="/public/images/pics/playmarket.png" alt="Play Market"> --}}
        <img class="play_market" src="/img/google-черный.svg" alt="Play Market">
        </a>
        <a href="javascript:void(0);" onclick="openAppOrStoreIOS('{{event._id}}')">
        <img class="app_store" src="/img/app-черная.svg" alt="App Store">
        </a>
      </div>
    </div>
  </div>
</div>
<script>
      function openAppOrStore(id) {
      var packageName = "com.alleven.package"; // Replace with your actual package name
      var appScheme = `alleven://singleEvent/${id}`; // Replace with your actual deep link

      // Try opening the app
      window.location.href = appScheme;

      // If the app is not installed, redirect to the Play Store after 2 seconds
      setTimeout(function () {
        window.location.href =
          "https://play.google.com/store/apps/details?id=" + packageName;
      }, 2000);
    }

      function openAppOrStoreIOS(id) {
      var packageName = "1662109163"; // Replace with your actual package name
      var appScheme = `alleven://singleEvent/${id}`; // Replace with your actual deep link

      // Try opening the app
      window.location.href = appScheme;

      // If the app is not installed, redirect to the Play Store after 2 seconds
      setTimeout(function () {
        window.location.href =
          "https://apps.apple.com/am/app/alleven/id" + packageName;
      }, 2000);
    }


</script>